#!/bin/bash

flags () {
    echo "
Flags:
    
    --region (Screenshots a selected region)
    --display (Screenshots current active monitor)
    --all (Screenshots all monitors/entire desktop)
    
why are you using this in your terminal anyways
	"
	exit
}

filename=$HOME/Pictures/Screenshots/$(date +'Screenshot_%Y-%m-%d_%H-%M-%S.png')

if [[ $1 == "" ]]; then
	flags
fi

if [ $1 == '--region' ]; then
    grim -l 0 -g "$(slurp -b 00000088 -w 0)" - | magick - -shave 4x4 PNG:$filename
    wl-copy < $filename
	notify-send "Region screenshot" "Saved to $filename" --icon=$filename

elif [ $1 == '--display' ]; then    
	grim -l 0 -o "$(hyprctl activeworkspace -j | jq -r '.monitor')" $filename
    wl-copy < $filename
	notify-send "Monitor screenshot" "Saved to $filename" --icon=$filename
	
elif [ $1 == '--all' ]; then
    grim -l 0 $filename
    wl-copy < $filename
	notify-send "Desktop screenshot" "Saved to $filename" --icon=$filename

else
	flags
fi
